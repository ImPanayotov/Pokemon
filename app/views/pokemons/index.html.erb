<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon[:poke_id] %></td>
        <td><%= pokemon[:name] %></td>
        <td><%= link_to 'Show', pokemon_path(pokemon[:poke_id]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
